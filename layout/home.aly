                    Typeface=字体("product");
                    id="picSubTitle";
                    textColor=textc;
                  };
                  {
                    LinearLayout;
                    layout_width="fill";
                    orientation="horizontal";
                    {
                      CardView,
                      layout_marginRight="12dp";
                      CardElevation="0";
                      Radius="8dp";
                      layout_width="-2";
                      CardBackgroundColor=转0x(primaryc)-0xE8FFFFFF;
                      layout_height="-2";
                      {
                        TextView;
                        text="Pixiv";
                        id="pixiv";
                        Typeface=字体("product");
                        textColor=primaryc;
                        textSize="10dp";
                        padding="6dp";
                      };
                    };
                    {
                      CardView,
                      layout_marginRight="12dp";
                      CardElevation="0";
                      Radius="8dp";
                      layout_width="-2";
                      CardBackgroundColor=转0x(primaryc)-0xE8FFFFFF;
                      layout_height="-2";
                      {
                        TextView;
                        text="画师：";
                        Typeface=字体("product");
                        textColor=primaryc;
                        id="picAuthor";
                        textSize="10dp";
                        padding="6dp";
                      };
                    };
                    {
                      CardView,
                      CardElevation="0";
                      Radius="8dp";
                      layout_width="-2";
                      CardBackgroundColor=转0x(primaryc)-0xE8FFFFFF;
                      layout_height="-2";
                      {
                        TextView;
                        text="归属：";
                        id="fromWhatAnime";
                        Typeface=字体("product");
                        textColor=primaryc;
                        textSize="10dp";
                        padding="6dp";
                      };
                    };
                  };
                  {
                    LinearLayout;
                    layout_width="fill";
                    {
                      CardView,
                      layout_marginRight="12dp";
                      layout_marginTop="9dp";
                      CardElevation="0";
                      Radius="8dp";
                      layout_width="-2";
                      CardBackgroundColor=转0x(secondaryc)-0xE8FFFFFF;
                      layout_height="-2";
                      {
                        TextView;
                        text="投稿：";
                        Typeface=字体("product");
                        id="uploader";
                        textColor=secondaryc;
                        textSize="10dp";
                        padding="6dp";
                      };
                    };
                    {
                      CardView,
                      CardElevation="0";
                      layout_marginTop="9dp";
                      Radius="8dp";
                      layout_width="-2";
                      CardBackgroundColor=转0x(secondaryc)-0xE8FFFFFF;
                      layout_height="-2";
                      {
                        TextView;
                        text="插画";
                        Typeface=字体("product");
                        textColor=secondaryc;
                        id="picType";
                        textSize="10dp";
                        padding="6dp";
                      };
                    };
                  };
                };
              };
            };            
            {
              CardView,
              CardElevation="3dp";
              Radius="24dp";
              layout_gravity="right|top",
              layout_marginRight="16dp",
              CardBackgroundColor=primaryc;
              layout_width="48dp",
              layout_height="48dp",
              {
                LinearLayout;
                layout_width="48dp";
                layout_height="48dp";
                id="fltbtn";
                onClick=function()
                  if cpop_isShowing==true then
                    cpop.showAsDropDown(fltbtn)
                    fltbtn_anime(0,225)
                    cpop_isShowing=false
                   else
                    cpop.dismiss()
                  end
                end,
                {
                  ImageView;
                  layout_width="48dp";
                  layout_height="48dp";
                  src=图标("add");
                  padding="14dp",
                  ColorFilter="#ffffffff",
                };
              },
            },           
          },
        },
      },
    },
    "layout.home_layout.page_setting";
    "layout.home_layout.page_collect";
    "layout.donate";
    "layout.past";
  };

