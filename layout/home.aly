        id = "_info_card_root",
        {
          LinearLayout,
          layout_width = "-1",
          layout_height = "-2",
          {
            FrameLayout,
            layout_width = "fill",
            layout_height = "fill",
            {
              CardView,
              layout_marginTop="24dp";
              layout_margin="4dp";
              CardElevation="2dp";
              Radius="10dp";
              layout_width="-1";
              CardBackgroundColor=backgroundc;
              layout_height="-2";
              {
                LinearLayout;
                layout_width="fill";
                padding="16dp",
                orientation="vertical";
                {
                  LinearLayout;
                  layout_width="fill";
                  layout_height="-2";
                  {
                    TextView;
                    text=" 月 日";
                    textSize="24dp";
                    id="picDate";
                    Typeface=字体("product-Bold");
                    textColor=textc;
                  };
                  {
                    TextView;
                    text="";
                    layout_marginLeft="8dp";
                    textSize="14dp";
                    id="picChineseDate";
                    Typeface=字体("product-Bold");
                    textColor=stextc;
                  };
                };
                {
                  GridView;
                  layout_marginTop="4dp";
                  id="colorTypeGrid";
                  numColumns="10",
                  layout_width="fill";
                };
                {
                  LinearLayout;
                  orientation="vertical";
                  layout_width="fill";
                  {
                    TextView;
                    text="加载中...";
                    textSize="28dp";
                    id="picTitle";
                    layout_marginTop="12dp",
                    Typeface=字体("product-Bold");
                    textColor=primaryc;
                  };
                  {
                    TextView;
                    text="";
                    layout_marginTop="4dp",
                    textSize="15dp";
